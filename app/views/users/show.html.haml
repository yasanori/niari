.prf-top-contents
  .main-content
    .main-content__img
      -  if @user.image.present?
        = image_tag @user.image.url, class: 'main-prf-image'
      - else
        = image_tag 'nofoto.jpg', class: 'main-prf-image'
    .main-content__prf
      %h2.prf-user-name
        = @user.name
      .prf-user-text
        = @user.profile
    .main-content__btns
      - if @user.id == current_user.id
      -else
        = link_to 'フォロー', '#', class: 'prf-btn'
        = link_to '依頼', '#', class: 'prf-btn'
        - if @isRoom == true
          = link_to "DM", room_path(@roomId), class: 'prf-btn'
        - else
          = form_with(model: @room, local: true) do |f|
            = f.fields_for @entry do |e|
              = e.hidden_field :user_id, value: @user.id
            = f.submit "DM", class: 'prf-btn'
.prf-bottom-contents
  = link_to 'Memories', '#', class: 'sub-text'
  .memories-box
    - @memories.each do |memory|
      .memory-box
        = image_tag memory.photo.url, class: 'main-box__date'
